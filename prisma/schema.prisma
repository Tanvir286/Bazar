
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  user
  admin
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role      Role     @default(user)

  //  relation field (একজন user-এর সব category)
  categories Category[]

  // এক user-এর সব প্রোডাক্ট
  products   Product[]
}

model Category {
  id                     Int      @id @default(autoincrement())
  categoryname           String   @unique
  categorydescription    String
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt

  //  relation to User
  userId                 Int      // foreign key
  user                   User     @relation(fields: [userId], references: [id])
  
  // এক ক্যাটাগরির সব প্রোডাক্ট
  products               Product[]
  
}

model Product {
  id               Int      @id @default(autoincrement())
  producttitle     String
  productdescription String
  productprice     Decimal   @db.Decimal(10,2)  // price দুই decimal পর্যন্ত
  productstock     Decimal   @db.Decimal(10,2)  // stock দুই decimal পর্যন্ত
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  // relation to Category
  categoryId Int
  category   Category @relation(fields: [categoryId], references: [id])

  // relation to User
  userId     Int
  user       User     @relation(fields: [userId], references: [id])
}